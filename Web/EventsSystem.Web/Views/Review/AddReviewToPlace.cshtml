@model EventsSystem.Web.ViewModels.Review.AddReviewToPlaceModel
@using EventsSystem.Web.ViewModels.Review

<section class="page-section portfolio ">
    <div class="container">
        <h1 class="display-6 mt-3 ml-3"> Create Review</h1>
        <div class="col-md-6">
            <form asp-controller="Review" asp-action="AddReviewToPlace" method="post" class="form">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    
                    <input asp-for="Name" class="form-control" value="@this.ViewContext.RouteData.Values["name"].ToString().Replace("-"," ")" readonly/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea> 
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                @*@this.ViewContext.RouteData.Values["name"]*@

                <hr />

                <input type="submit" name="name" value="Create Review" class="btn btn-primary" />
            </form>
        </div>
    </div>
</section>

<section class="page-section" id="contact">
</section>
