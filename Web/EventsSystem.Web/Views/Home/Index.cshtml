@using EventsSystem.Common
@model EventsSystem.Web.ViewModels.Home.IndexViewModel
@{ this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName!}"; }



<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>

    @if (User.Identity.IsAuthenticated)
    {
<h1> Most inerested upcomming events in your city </h1> foreach (var ev in Model.EventsByCity)
{

<div class="media">
    @*<img class="mr-3" src="@ev.Place." width="100" height="100" alt="@ev.Name">*@
    <div class="media-body">

        <h4><a asp-controller="Events" asp-action="ById" asp-route-id="@ev.Id">@ev.Name</a></h4>

    </div>
</div>}
}

    @if (!User.Identity.IsAuthenticated)
    {
<h1>  Most inerested upcomming events  </h1> foreach (var ev in Model.Events)
{

<div class="media">

    <div class="media-body">

        <h4><a asp-controller="Events" asp-action="ById" asp-route-id="@ev.Id">@ev.Name</a></h4>

    </div>
</div>}
}
    
    <h4><a asp-controller="Events" asp-action="ShowAllEventsByCity" asp-route-page="1" class="btn btn-primary btn-lg ">See All Upcomming events in your city</a></h4>

    <h4><a asp-controller="Events" asp-action="ShowAllEvents" asp-route-page="1" class="btn btn-primary btn-lg ">See All Upcomming events </a></h4>
</div>
