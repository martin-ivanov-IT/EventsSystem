@model EventsSystem.Web.ViewModels.Places.PlaceAllViewModel

@foreach (var place in Model.AllPlaces)
{

    <div class="media">
        @*<img class="mr-3" src="@ev.Place." width="100" height="100" alt="@ev.Name">*@
        <div class="media-body">

            <h4><a asp-controller="Events" asp-action="ById" asp-route-id="@place.Id">@place.Name</a></h4>
            <div>current Page @this.Model.AllPlaces.ElementAt(0).CurrentPage</div>
            <div>page Count @this.Model.AllPlaces.ElementAt(0).PagesCount</div>

        </div>
    </div>}

<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.AllPlaces.ElementAt(0).CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="allPlaces"
                   asp-route-page="@(this.Model.AllPlaces.ElementAt(0).CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= this.Model.AllPlaces.ElementAt(0).PagesCount; i++)
        {
            var active = i == this.Model.AllPlaces.ElementAt(0).CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-route="allPlaces"
                   asp-route-page="@i">@i</a>
            </li>
        }

        @if (this.Model.AllPlaces.ElementAt(0).CurrentPage == this.Model.AllPlaces.ElementAt(0).PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="allPlaces"
                   asp-route-page="@(this.Model.AllPlaces.ElementAt(0).CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>