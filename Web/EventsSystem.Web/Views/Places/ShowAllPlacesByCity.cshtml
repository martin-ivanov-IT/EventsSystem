@model EventsSystem.Web.ViewModels.Places.PlaceAllViewModel

<section class="page-section portfolio ">
    <div class="container">
        <h3 class="display-4 mt-3 ">All places in your city</h3>
        @foreach (var place in Model.PlacesByCity)
        {

            <div class="list-group ">
                <a asp-controller="Places" asp-action="ById" asp-route-id="@place.Id" class=" col-md-5 mt-3 mb-2 list-group-item list-group-item-action flex-column align-items-start active">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@place.Name</h5>
                    </div>
                </a>
            </div>
        }

    </div>
    <nav>
        <ul class="pagination justify-content-center">
            @if (this.Model.PlacesByCity.ElementAt(0).CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-route="allPlacesByCity"
                       asp-route-page="@(this.Model.PlacesByCity.ElementAt(0).CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= this.Model.PlacesByCity.ElementAt(0).PagesCount; i++)
            {
                var active = i == this.Model.PlacesByCity.ElementAt(0).CurrentPage ? "active" : string.Empty;
                <li class="page-item @active">
                    <a class="page-link"
                       asp-route="allPlacesByCity"
                       asp-route-page="@i">@i</a>
                </li>
            }

            @if (this.Model.PlacesByCity.ElementAt(0).CurrentPage == this.Model.PlacesByCity.ElementAt(0).PagesCount)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Next</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-route="allPlacesByCity"
                       asp-route-page="@(this.Model.PlacesByCity.ElementAt(0).CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>

</section>

<section class="page-section" id="contact">
</section>